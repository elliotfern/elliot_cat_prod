{
  "compilerOptions": {
    "target": "es6", 
    "module": "es2020", 
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types/"]
      },

 "include": [
    "src",
    "src/types/global.d.ts",
    "src/types/",
  ], 
  "exclude": ["node_modules"]
}
