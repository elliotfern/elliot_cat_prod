{
  "compilerOptions": {
    "target": "es6", 
    "module": "es2020", 
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "src_old",
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "src_old/types"]
      },

 "include": [
    "src_old",
    "src_old/types/global.d.ts",
    "src_old/types",
  ], 
  "exclude": ["node_modules"]
}
